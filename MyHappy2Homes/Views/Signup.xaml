<?xml version = "1.0" encoding = "uft-8"?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="MyHappy2Homes.Views.Signup">
    <ContentPage.Content>    
        <StackLayout>
            <Entry x:Name="emailEntry" Placeholder="Email" Text="{Binding Email}" Keyboard="Email"></Entry>  
            <Entry x:Name="passwordentry" Placeholder="Password" Text="{Binding Password}" IsPassword="True"></Entry>     
            <Entry x:Name="cfmpasswordentry" Placeholder="Reenter Password" Text="{Binding ConfirmPassword}" IsPassword="True"></Entry>     
            <Button x:Name="signup" Text="SignUp" Command="{Binding SignUpCommand}" HorizontalOptions="Center"></Button>    
        </StackLayout>   
    </ContentPage.Content>     
</ContentPage>